<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <log4net>
    <root>
      <level value="ALL"/>
      <appender-ref ref="Log"/>
      <appender-ref ref="Error"/>
    </root>

    <appender name="Error" type="log4net.Appender.RollingFileAppender">
      <file value="${LOCALAPPDATA}\Gargoyle Strategic Investments\SampleSender\BroadcastSender_Error.log"/>
      <appendToFile value="true"/>
      <rollingStyle value="Date"/>
      <datePattern value="yyyyMMdd"/>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="ERROR"/>
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <param name="conversionPattern" value="%d{yyyyMMdd:HHmmss.fffff} [%t] %-5p %c %x - %m%n"/>
      </layout>
    </appender>

    <appender name="Log" type="log4net.Appender.RollingFileAppender">
      <file value="${LOCALAPPDATA}\Gargoyle Strategic Investments\SampleSender\BroadcastSender_Debug.log"/>
      <appendToFile value="true"/>
      <rollingStyle value="Date"/>
      <datePattern value="yyyyMMdd"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="conversionPattern" value="%d{yyyyMMdd:HHmmss.fffff} [%t] %-5p %c %x - %m%n"/>
      </layout>
    </appender>
  </log4net>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
</configuration>
